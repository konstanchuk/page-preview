<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- cms page start -->
    <type name="Magento\Cms\Ui\Component\Listing\Column\PageActions">
        <plugin name="konstanchuk_page_preview_cms_listing_actions"
                type="Konstanchuk\PagePreview\Plugin\Cms\Ui\Component\Listing\Column\PageActions"
                sortOrder="10"
                disabled="false"/>
    </type>
    <!-- cms page end -->
    <!-- product page start -->
    <type name="Magento\Catalog\Ui\Component\Listing\Columns\ProductActions">
        <plugin name="konstanchuk_page_preview_cms_listing_actions"
                type="Konstanchuk\PagePreview\Plugin\Catalog\Ui\Component\Listing\Column\ProductActions"
                sortOrder="10"
                disabled="false"/>
    </type>
    <!-- product page end -->
</config>